<UserControl x:Class="Phoenix.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Phoenix"
             
        mc:Ignorable="d"
        MinHeight="480" MinWidth="720">
    <!-- above defines a minimum of 720x480 -->
    
    
    <!--Width="Auto" Height="Auto"-->
    <!--Title="MainMenu"-->
    
    <Grid>
        <!-- gradient -->
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                        <RotateTransform Angle="-90" CenterX="0.5" CenterY="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="#FFFDE2CE"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- grid definition -->
        <Grid.RowDefinitions>
            <!-- header -->
            <RowDefinition Height="60"/>
            <!-- relative area -->
            <RowDefinition Height="Auto"/>
            <!-- rest -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- header -->
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                            <SkewTransform CenterX="0.5" CenterY="0.5"/>
                            <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="#FFFFDEBC"/>
                    <GradientStop Color="#FFFF8D66" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <TextBlock Text="Menu" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" FontWeight="Bold" Foreground="White"/>
        </Grid>

        <!-- button grid -->
        <Grid Grid.Row="1" MinHeight="300" MaxHeight="300">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Content="Hold" Width="200" Height="60" Background="#FFF8A521" Foreground="White" FontSize="24" FontFamily="Franklin Gothic Demi" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" 
                    Click="TeamMenu_Button"/>
            <Button Grid.Row="1" Content="Medlemmer" Width="200" Height="60" Background="#FFF8A521" Foreground="White" FontSize="24" FontFamily="Franklin Gothic Demi" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0"
                    Click="MemberMenu_Button"/>
            <Button Grid.Row="2" Content="Kontingent" Width="200" Height="60" Background="#FFF8A521" Foreground="White" FontSize="24" FontFamily="Franklin Gothic Demi" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0"
                    Click="ContingentMenu_Button"/>
        </Grid>

        <!-- lower rest w/ logo -->
        <Grid Grid.Row="2" >
            <Image x:Name="logo"  Source="/Billeder/logo judo.jpg" Height="80" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,10" Opacity="0.8"/>
        </Grid>

        <!--<Rectangle>
                <Rectangle.Fill>
                </Rectangle.Fill>
            </Rectangle>-->

        <!--<Label Content="Menu" HorizontalAlignment="Center" VerticalAlignment="Top"-->
        <!--FontSize="36" FontWeight="Bold" Foreground="White"/>-->
    </Grid>
</UserControl>
