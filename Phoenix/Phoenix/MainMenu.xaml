<UserControl x:Class="Phoenix.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Phoenix"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="700">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                        <RotateTransform Angle="-90" CenterX="0.5" CenterY="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="#FFFDE2CE"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Rectangle Height="58" VerticalAlignment="Top">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                            <SkewTransform CenterX="0.5" CenterY="0.5"/>
                            <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="#FFFFDEBC"/>
                    <GradientStop Color="#FFFF8D66" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Label Content="Menu" HorizontalAlignment="Center" VerticalAlignment="Top"
       FontSize="36" FontWeight="Bold" Foreground="White"/>


        <Button Content="Hold" Width="200" Height="60" Background="#FFF8A521" Foreground="White" FontSize="24" FontFamily="Arial Black" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,126,0,0" 
                Click="ButtonTeamMenu"/>
        <Button Content="Medlemmer" Width="200" Height="60" Background="#FFF8A521" Foreground="White" FontSize="24" FontFamily="Arial Black" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,242,0,0"/>
        <Button Content="Kontingent" Width="200" Height="60" Background="#FFF8A521" Foreground="White" FontSize="24" FontFamily="Arial Black" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,366,0,0"/>

        <Image x:Name="logo"  Source="/Billeder/logo judo.jpg" Width="120" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20" Opacity="0.8"/>

    </Grid>
</UserControl>
