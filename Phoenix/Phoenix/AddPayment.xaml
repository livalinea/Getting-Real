<UserControl x:Class="Phoenix.AddPayment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Phoenix"
          mc:Ignorable="d"
        MinHeight="480" MinWidth="720">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                        <RotateTransform Angle="-90" CenterX="0.5" CenterY="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="#FFFDE2CE"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                            <SkewTransform CenterX="0.5" CenterY="0.5"/>
                            <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="#FFFFDEBC"/>
                    <GradientStop Color="#FFFF8D66" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <TextBlock x:Name="AddPaymentTitle" Text="Tilføj betaling" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" FontWeight="Bold" Foreground="White"/>
        </Grid>

        <Button Click="BackButton" Background="Transparent" BorderThickness="0" Margin="40,0,0,0" Height="40" Width="40" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Image x:Name="BackArrow" Source="/Billeder/BackArrow.png" Stretch="Uniform"/>
        </Button>


        <Viewbox Grid.Row="1" 
                 StretchDirection="Both" Stretch="Uniform" 
                 HorizontalAlignment="Center" VerticalAlignment="Center" 
                 MaxWidth="1200" MaxHeight="800" Margin="0,10,0,10">
            <Grid Width="720" Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0*"/>
                    <ColumnDefinition Width="Auto" MinWidth="534"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="1" Margin="10,0,7,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                </Grid>
            </Grid>
        </Viewbox>


        <Viewbox Grid.Row="2" 
                 StretchDirection="Both" Stretch="Uniform" 
                 HorizontalAlignment="Center" VerticalAlignment="Center" 
                 MaxWidth="1200" MaxHeight="800">

            <Grid Width="720" Height="400" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400"/>
                    <ColumnDefinition Width="202"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,20,0" VerticalAlignment="Center">

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                        <Label x:Name="Name" Content="Navn" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FF6A3B24" Width="140"/>
                        <Label x:Name="NameLabel" Content="{Binding MemberName}" Foreground="#FF6A3B24" FontFamily="Franklin Gothic Book" FontSize="20" VerticalAlignment="Center" Width="188"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                        <Label x:Name="Team" Content="Hold:" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FF6A3B24" Width="140"/>
                        <Label x:Name="TeamLabel" Content="{Binding TeamName}" Foreground="#FF6A3B24" FontFamily="Franklin Gothic Book" FontSize="20" VerticalAlignment="Center" Width="188"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                        <Label x:Name="Description" Content="Beskrivelse" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FF6A3B24" Width="140"/>
                        <TextBox x:Name="DesreptionField" Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" VerticalAlignment="Center" Width="198" FontFamily="Franklin Gothic Book" FontSize="16"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                        <Label x:Name="PaymentDate" Content="Betalingsdato" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FF6A3B24" Width="140"/>
                        <TextBox x:Name="PaymentDateField"  Text="{Binding PaymentDate, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" VerticalAlignment="Center" Width="198" FontFamily="Franklin Gothic Book" FontSize="16"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                        <Label x:Name="Amount" Content="Beløb" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FF6A3B24" Width="140"/>
                        <TextBox x:Name="AmountField" Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" VerticalAlignment="Center" Width="198" FontFamily="Franklin Gothic Book" FontSize="16"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,5">
                        <Label x:Name="JudoPass" Content="Judolicens:" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FF6A3B24" Width="140"/>
                        <CheckBox Height="14" IsChecked="{Binding HasJudoPass}" Width="auto" />
                    </StackPanel>

                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,0,20,0">
                    <Button x:Name="Save" Content="Gem betaling" HorizontalAlignment="Center" 
        Height="52" Width="202" Margin="0,0,0,30"
        Background="#FF906048" BorderBrush="{x:Null}" Foreground="#FFF4F4F4" FontFamily="Franklin Gothic Book" FontSize="18" Click="Save_Click"/>


                    <Button x:Name="Delete" Content="Slet betaling" HorizontalAlignment="Center" 
                            Height="46" Width="202" 
                            Background="#FF906048" BorderBrush="{x:Null}" Foreground="#FFF4F4F4" FontFamily="Franklin Gothic Book" FontSize="18"/>
                </StackPanel>

                <Image x:Name="logo" Grid.Column="2" Source="/Billeder/logo judo.jpg" Height="80" 
                       HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,0,10" Opacity="0.8"/>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>