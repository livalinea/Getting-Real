<UserControl x:Class="Phoenix.TeamPayment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Phoenix"
                 mc:Ignorable="d"
             MinHeight="480" MinWidth="720">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                        <RotateTransform Angle="-90" CenterX="0.5" CenterY="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="#FFFDE2CE"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                            <SkewTransform CenterX="0.5" CenterY="0.5"/>
                            <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="#FFFFDEBC"/>
                    <GradientStop Color="#FFFF8D66" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <TextBlock x:Name="TeamTitle"
                       Text="Placeholder"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="White"/>

            <Button Click="BackButton"
                    Background="Transparent"
                    BorderThickness="0"
                    Margin="20,0,0,0"
                    Height="40" Width="40"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                <Image x:Name="BackArrow" Source="/Billeder/BackArrow.png" Stretch="Uniform"/>
            </Button>
        </Grid>


        <Viewbox Grid.Row="1" 
                 StretchDirection="Both" Stretch="Uniform" 
                 HorizontalAlignment="Center" VerticalAlignment="Center" 
                 MaxWidth="1200" MaxHeight="800">
            <Grid Width="720" Height="400" Margin="30,20,30,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="500"/>
                    <ColumnDefinition Width="202"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="0,0,20,0">

                    <TextBlock Text="Betalinger" 
                               FontFamily="Franklin Gothic Demi" FontWeight="Bold" 
                               Foreground="#FFA30B0B" FontSize="20" Height="27" />

                    <Grid Margin="0,10,0,10" Width="470" HorizontalAlignment="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="Searchfield" 
                                 HorizontalContentAlignment="Left" VerticalContentAlignment="Center" 
                                 Padding="5,0,30,0" FontSize="14" Text="Søg efter navn" 
                                 Height="30" Grid.Column="0" Margin="0,0,5,0" />
                        <Button x:Name="SearchButton" Content="🔍" Height="30" Width="30" 
                                Background="Transparent" BorderBrush="Transparent" 
                                VerticalAlignment="Center" Cursor="Hand" Grid.Column="1"/>
                        <Image Source="/Billeder/Lightbulb.png" Height="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,30,0"/>
                    </Grid>

                    <ListView x:Name="HoldMedlemListe"
                              Height="281" Width="474" HorizontalAlignment="Left">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="ID" DisplayMemberBinding="{Binding MemberID}" Width="50"/>
                                <GridViewColumn Header="Navn" DisplayMemberBinding="{Binding Name}" Width="100"/>
                                <GridViewColumn Header="Alder" DisplayMemberBinding="{Binding Age}" Width="100"/>
                                <GridViewColumn Header="Hold" DisplayMemberBinding="{Binding TeamType}" Width="80"/>
                                <GridViewColumn Header="" Width="144"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Top" Margin="0,47,0,0">

                    <Button x:Name="RegPayment" Content="Registrer betaling" 
                            Height="62" Width="202" Margin="0,0,0,30"
                            Background="#FF906048" BorderBrush="{x:Null}" Foreground="#FFF4F4F4" 
                            FontFamily="Franklin Gothic Book" FontSize="18" Click="RegPayment_Click"/>

                    <Button x:Name="SeeList" Content="Hent samlet liste" 
                            Height="62" Width="202" 
                            Background="#FF906048" BorderBrush="{x:Null}" Foreground="#FFF4F4F4" 
                            FontFamily="Franklin Gothic Book" FontSize="18"/>
                </StackPanel>
            </Grid>
        </Viewbox>

        <Image Grid.Row="1" Grid.ColumnSpan="2"
               x:Name="logo"
               Source="/Billeder/logo judo.jpg"
               Height="80"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Margin="0,0,30,10"
               Opacity="0.8"/>
    </Grid>

</UserControl>