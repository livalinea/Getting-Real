<UserControl x:Class="Phoenix.AddTeamMember"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             MinHeight="480" MinWidth="720">

    <Grid>
        <!-- 3 rækker så Row=2 virker -->
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Indhold -->
            <RowDefinition Height="Auto"/>
            <!-- Logo + labels + knapper -->
        </Grid.RowDefinitions>

        <!-- 2 kolonner fordi du bruger Grid.Column=1 -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- BAGGRUND (samme farve som før) -->
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                        <RotateTransform Angle="-90" CenterX="0.5" CenterY="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="#FFFDE2CE"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- HEADER -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                            <SkewTransform CenterX="0.5" CenterY="0.5"/>
                            <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="#FFFFDEBC"/>
                    <GradientStop Color="#FFFF8D66" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <TextBlock x:Name="TeamTitle"
                       Text="Placeholder"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="White"/>

            <Button Click="BackButton"
                    Background="Transparent"
                    BorderThickness="0"
                    Margin="20,0,0,0"
                    Height="40" Width="40"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                <Image x:Name="BackArrow" Source="/Billeder/BackArrow.png" Stretch="Uniform"/>
            </Button>
        </Grid>

        <!-- VENSTRE SIDE (liste + søg) -->
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="20,20,20,10">
            <TextBlock Text="Vælg det ønskede hold"
                       FontFamily="Franklin Gothic Demi"
                       FontWeight="Bold"
                       Foreground="#FFA30B0B"
                       FontSize="20"/>

            <Grid Margin="45,10,0,10" Width="270" Height="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200*"/>
                    <ColumnDefinition Width="60*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="Searchfield"  HorizontalContentAlignment="Left" VerticalContentAlignment="Bottom" Padding="5,0,30,0" FontSize="14" Text="Søg efter navn" Margin="-59,0,-14,0" Grid.ColumnSpan="2" IsMouseDirectlyOverChanged="Searchfield_IsMouseDirectlyOverChanged" />
                <Button x:Name="SearchButton" Content="🔍" Height="24" Background="Transparent" BorderBrush="Transparent" VerticalAlignment="Center" Cursor="Hand" RenderTransformOrigin="1.09,0.662" HorizontalAlignment="Left" Width="24" Grid.Column="1" Margin="27,0,0,0"/>
            </Grid>

            <ListView x:Name="HoldMedlemListe"
                      Height="200">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding MemberID}" Width="50"/>
                        <GridViewColumn Header="Navn" DisplayMemberBinding="{Binding Name}" Width="100"/>
                        <GridViewColumn Header="Alder" DisplayMemberBinding="{Binding Age}" Width="100"/>
                        <GridViewColumn Header="Vælg" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>


        <StackPanel Grid.Row="1" Grid.Column="1" Margin="20,20,20,10">
            <Label Content="Vælg ønsket handling"
                   FontFamily="Franklin Gothic Demi"
                   Foreground="#FFA30B0B"
                   FontSize="18"
                   Background="Transparent"/>

            <Button x:Name="AddToteam"
                    Content="Tilføj til hold"
                    Height="62" Width="202"
                    Margin="0,20,0,0"
                    Background="#FF906048"
                    Foreground="#FFF4F4F4"
                    BorderBrush="{x:Null}"
                    FontFamily="Franklin Gothic Book" FontSize="18" />

            <Button x:Name="RemoveFromTeam"
                    Content="Fjern fra hold"
                    Height="62" Width="202"
                    Margin="0,20,0,0"
                    Background="#FF906048"
                    Foreground="#FFF4F4F4"
                    BorderBrush="{x:Null}"
                    FontFamily="Franklin Gothic Book" FontSize="18"/>
        </StackPanel>

      
        <Image Grid.Row="2" Grid.ColumnSpan="2"
               x:Name="logo"
               Source="/Billeder/logo judo.jpg"
               Height="80"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Margin="0,0,20,10"
               Opacity="0.8"/>

    </Grid>
</UserControl>

