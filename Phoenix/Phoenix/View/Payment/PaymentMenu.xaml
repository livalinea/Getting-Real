<UserControl x:Class="Phoenix.PaymentMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Phoenix"
        mc:Ignorable="d"
        MinHeight="480" MinWidth="720">

    <Grid>
      
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Baggrund -->
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFFDE2CE"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Header -->
        <Rectangle Height="58" VerticalAlignment="Top" Grid.ColumnSpan="3">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFFFDEBC"/>
                    <GradientStop Color="#FFFF8D66" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <Button Click="BackButton" Background="Transparent" BorderThickness="0" Margin="40,10,0,0" Height="40" Width="40" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Image x:Name="BackArrow" Source="/Billeder/BackArrow.png" Stretch="Uniform"/>
        </Button>

        <!-- Titel og tekst (går tværs over alle kolonner) -->
        <StackPanel Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Top" Margin="0,5,0,0">
            <Label Content="Kontingent" FontSize="36" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock Text="Vælg det ønskede hold eller samlet liste over betalinger"  FontSize="24" FontFamily="Arial Rounded MT Bold" FontWeight="Bold" Foreground="#FFA30B0B" HorizontalAlignment="Center"/>

        </StackPanel>

        <!-- Kolonne 1 med  3 hold -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Height="311" Margin="0,148,0,0">
            <Button Content="Motorik" Width="200" Height="60" Background="#FFF8A521" Foreground="White"  FontSize="20" FontFamily="Franklin Gothic Demi" FontWeight="Bold"  Margin="10" Click="Button_Click" />
            <Button  Content="Puslinge" Width="200" Height="60" Background="#FFF8A521" Foreground="White" FontSize="20" FontFamily="Franklin Gothic Demi" Margin="10" Click="Button_Click" />
            <Button Content="Junior" Width="200" Height="60" Background="#FFF8A521" Foreground="White" FontSize="20" FontFamily="Franklin Gothic Demi" Margin="10" Click="Button_Click"/>
        </StackPanel>

        <!-- Kolonne 2 med 2 hold -->
        <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Height="288" Margin="0,148,0,0">
            <Button Content="Senior" Width="200" Height="60" Background="#FFF8A521" Foreground="White" FontSize="20" FontFamily="Franklin Gothic Demi" Margin="10" Click="Button_Click" />
            <Button Content="BJJ" Width="200" Height="60" Background="#FFF8A521" Foreground="White" FontSize="20" FontFamily="Franklin Gothic Demi" Margin="10" Click="Button_Click" />
        </StackPanel>

        <!-- samlet list -->
        <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Height="212" Margin="0,143,0,0">
            <Button  x:Name="List" Content="Samlet liste" Width="200" Height="60" Background="#FF906048" Foreground="White" FontSize="20" FontFamily="Franklin Gothic Demi" Margin="10" IsEnabled="False"  />
        </StackPanel>

        <!-- Logo -->
        <Image x:Name="logo" Source="/Billeder/logo judo.jpg"
               Width="120" Height="120"
               HorizontalAlignment="Right" VerticalAlignment="Bottom" Opacity="0.8" Grid.Column="2"/>
    </Grid>
</UserControl>