<UserControl x:Class="Phoenix.SeeMemberInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Phoenix"
        mc:Ignorable="d"
        MinHeight="480" MinWidth="720">

    <Grid Grid.IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Baggrund -->
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                        <RotateTransform Angle="-90" CenterX="0.5" CenterY="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="#FFFDE2CE"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Header -->
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                            <SkewTransform CenterX="0.5" CenterY="0.5"/>
                            <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="#FFFFDEBC"/>
                    <GradientStop Color="#FFFF8D66" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <!-- Headerens indhold -->
            <TextBlock x:Name="ShowMemberInfomation" Text="Vis medlem" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" FontWeight="Bold" Foreground="White"/>
        </Grid>

        <Button Click="BackButton" Background="Transparent" BorderThickness="0" Margin="40,0,0,0" Height="40" Width="40" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Image x:Name="BackArrow" Source="/Billeder/BackArrow.png" Stretch="Uniform"/>
        </Button>

        <!-- Nederste grid med tre kolonner -->
        <Grid Grid.Row="1" Margin="5,0,5,20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Venstre kolonne-->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="LabelGroup"/>
                    <ColumnDefinition Width="*" SharedSizeGroup="FieldGroup"/>
                </Grid.ColumnDefinitions>
                <!--Her sngiver vi den teksttype ift. størrelse og stil for dette grid-->
                <Grid.Resources>
                    <Style TargetType="Label">
                        <Setter Property="FontFamily" Value="Franklin Gothic Demi"/>
                        <Setter Property="FontSize" Value="20"/>
                        <Setter Property="Foreground" Value="#FFA30B0B"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Right"/>
                        <Setter Property="Margin" Value="0,0,10,6"/>
                    </Style>
                    <Style TargetType="TextBox">
                        <Setter Property="FontFamily" Value="Franklin Gothic Book"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                        <Setter Property="Height" Value="26"/>
                    </Style>
                </Grid.Resources>

                <Label Grid.Row="0" Grid.Column="0" x:Name="IDMember" Content="ID" HorizontalAlignment="Left"/>
                <Label Grid.Row="0" Grid.Column="1" x:Name="IdLabel" Content="{Binding MemberID}" MinWidth="198" HorizontalAlignment="Stretch"/>

                <Label Grid.Row="1" Grid.Column="0" x:Name="Firstname" Content="Fornavn:" HorizontalAlignment="Left"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="FirstnameLabel" Text="{Binding FirstName}" HorizontalAlignment="Stretch"/>

                <Label Grid.Row="2" Grid.Column="0" x:Name="Lastname" Content="Efternavn:" HorizontalAlignment="Left"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="LastnameLabel" Text="{Binding LastName}" HorizontalAlignment="Stretch"/>

                <Label Grid.Row="3" Grid.Column="0" x:Name="Birthdate" Content="Fødselsdag:" HorizontalAlignment="Left"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="BirthdateLabel" Text="{Binding BirthDate}" HorizontalAlignment="Stretch"/>

                <Label Grid.Row="4" Grid.Column="0" x:Name="Adress" Content="Adresse:" HorizontalAlignment="Left"/>
                <TextBox Grid.Row="4" Grid.Column="1" x:Name="AdressLabel" Text="{Binding Address}" HorizontalAlignment="Stretch"/>

                <Label Grid.Row="5" Grid.Column="0" x:Name="Email" Content="Mail:" HorizontalAlignment="Left"/>
                <TextBox Grid.Row="5" Grid.Column="1" x:Name="EmailLabel" Text="{Binding Mail}" HorizontalAlignment="Stretch"/>

                <Label Grid.Row="6" Grid.Column="0" x:Name="TelephoneNumber1" Content="Tlf.1:" HorizontalAlignment="Left"/>
                <TextBox Grid.Row="6" Grid.Column="1" x:Name="TelephoneNumber1Label" Text="{Binding PhoneNumber1}" HorizontalAlignment="Stretch"/>

                <Label Grid.Row="7" Grid.Column="0" x:Name="TelephoneNumber2" Content="Tlf.2:" HorizontalAlignment="Left"/>
                <TextBox Grid.Row="7" Grid.Column="1" x:Name="TelephoneNumber2Label" Text="{Binding PhoneNumber2}" HorizontalAlignment="Stretch"/>

                <Label Grid.Row="8" Grid.Column="0" x:Name="Role" Content="Rolle:" HorizontalAlignment="Left"/>
                <ComboBox Grid.Row="8" Grid.Column="1" x:Name="RoleComboBox" ItemsSource="{Binding Role}" HorizontalAlignment="Stretch" FontFamily="Franklin Gothic Book" FontSize="16"/>
            </Grid>

            <!-- spacer for at lave god plads mellem kolonnerne -->
            <Grid Grid.Column="1" Width="20"/>

            <!-- Højre kolonne -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="LabelGroup"/>
                    <ColumnDefinition Width="*" SharedSizeGroup="FieldGroup"/>
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <!--Her sngiver vi den teksttype ift. størrelse og stil for dette grid-->
                    <Style TargetType="Label">
                        <Setter Property="FontFamily" Value="Franklin Gothic Demi"/>
                        <Setter Property="FontSize" Value="20"/>
                        <Setter Property="Foreground" Value="#FFA30B0B"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Right"/>
                        <Setter Property="Margin" Value="0,6,10,6"/>
                    </Style>
                    <Style TargetType="TextBox">
                        <Setter Property="FontFamily" Value="Franklin Gothic Book"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                        <Setter Property="Height" Value="26"/>
                    </Style>
                </Grid.Resources>

                <Grid Grid.Row="0" Grid.ColumnSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" x:Name="Team" Content="Hold:" HorizontalAlignment="Left"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" x:Name="TeamComboBox" ItemsSource="{Binding Team}" MinWidth="127" HorizontalAlignment="Stretch" FontFamily="Franklin Gothic Book" FontSize="16"/>

                    <Label Grid.Row="1" Grid.Column="0" x:Name="Rank" Content="KYU:" HorizontalAlignment="Left"/>
                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="RankLabel" Text="{Binding Rank}" MinWidth="128" HorizontalAlignment="Stretch" />

                    <Label Grid.Row="2" Grid.Column="0" x:Name="Weight" Content="Vægt:" HorizontalAlignment="Left"/>
                    <TextBox Grid.Row="2" Grid.Column="1" x:Name="WeightLabel" Text="{Binding Weight}" MinWidth="127" HorizontalAlignment="Stretch"/>

                    <Label Grid.Row="3" Grid.Column="0" x:Name="JudoPass" Content="Judopas:" HorizontalAlignment="Left"/>
                    <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Label x:Name="Yes" Content="Ja" FontSize="18"/>
                        <CheckBox x:Name="YesToJudoPass" VerticalAlignment="Center"/>
                        <Label x:Name="No" Content="Nej" FontSize="18" Margin="10,0,0,0"/>
                        <CheckBox x:Name="NoToJudoPass" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Label Grid.Row="4" Grid.Column="0" x:Name="JudoLicens" Content="JudoLicens:"/>
                    <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <Label Content="Ja" FontSize="18" VerticalAlignment="Center" />
                        <CheckBox x:Name="YesToJudoLicens" VerticalAlignment="Center"/>
                        <Label Content="Nej" FontSize="18" Margin="10,0,0,0"/>
                        <CheckBox x:Name="NoToJudoLicens" VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>

                <!-- knapperne til at fjerne og redigere medlemsinfo -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,10">
                    <Button x:Name="Edit" Content="Rediger" Click="Edit_Click" Width="100" Margin="0,0,10,0" Background="#FF906048" Foreground="#FFF4F4F4" FontFamily="Franklin Gothic Book" FontSize="18"/>
                    <Button x:Name="Delete" Content="Fjern" Click="Delete_Click" Width="100" Background="#FF906048" Foreground="#FFF4F4F4" FontFamily="Franklin Gothic Book" FontSize="18"/>
                </StackPanel>

                <!-- Viser overblik over alle betalinger -->
                <ListView Grid.Row="2" x:Name="MedlemListesInfo" HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Dato" DisplayMemberBinding="{Binding DatePaid, StringFormat=dd-MM-yyyy}" Width="80"/>
                            <GridViewColumn Header="Beløb" DisplayMemberBinding="{Binding Price}" Width="80"/>
                            <GridViewColumn Header="Beskrivelse" DisplayMemberBinding="{Binding PayDescription}" Width="150"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
