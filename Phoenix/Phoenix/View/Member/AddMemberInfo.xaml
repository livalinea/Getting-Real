<UserControl x:Class="Phoenix.AddMemberInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Phoenix"
        mc:Ignorable="d"
        MinHeight="480" MinWidth="720">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                        <RotateTransform Angle="-90" CenterX="0.5" CenterY="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="#FFFDE2CE"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- header -->
        <Grid Grid.Row="0">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                            <SkewTransform CenterX="0.5" CenterY="0.5"/>
                            <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="#FFFFDEBC"/>
                    <GradientStop Color="#FFFF8D66" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <TextBlock x:Name="AddMemberInfomation" Text="Tilføj medlem"
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       FontSize="36" FontWeight="Bold" Foreground="White"/>
        </Grid>

        <!-- back button -->
        <Button Click="BackButton" Background="Transparent" BorderThickness="0"
                Margin="40,0,0,0" Height="40" Width="40" Grid.Row="0"
                HorizontalAlignment="Left" VerticalAlignment="Center">
            <Image x:Name="BackArrow" Source="/Billeder/BackArrow.png" Stretch="Uniform"/>
        </Button>

        <!-- lower section wrapped in ViewBox -->
        <Viewbox Grid.Row="1" Stretch="Uniform" StretchDirection="Both">
            <!-- Parent grid with two columns (left/right) -->
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Left side: labels + textboxes + role -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- ID -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,6">
                        <Label x:Name="IDMember" Content="ID"
                               FontFamily="Franklin Gothic Demi" Background="Transparent"
                               Foreground="#FFA30B0B" FontSize="18" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBox x:Name="IdField" Width="127" Margin="16,0,0,0"
                                 FontFamily="Franklin Gothic Book" FontSize="16"
                                 Background="{x:Null}" SelectionBrush="{x:Null}" SelectionTextBrush="{x:Null}"
                                 Foreground="#FF191717" BorderBrush="{x:Null}" IsReadOnly="True"/>
                    </StackPanel>

                    <!-- Fornavn -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,6">
                        <Label x:Name="Firstname" Content="Fornavn:"
                               FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B"
                               VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBox x:Name="FirstnamField" Width="198" Margin="0,0,0,0"
                                 HorizontalAlignment="Left"
                                 FontFamily="Franklin Gothic Book" FontSize="16"/>
                    </StackPanel>

                    <!-- Efternavn -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,6">
                        <Label x:Name="Lastname" Content="Efternavn:"
                               FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B"
                               VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBox x:Name="LastnameField" Width="198" Margin="16,0,0,0"
                                 FontFamily="Franklin Gothic Book" FontSize="16"
                                  HorizontalAlignment="Left"/>
                    </StackPanel>

                    <!-- Fødselsdag -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,6">
                        <Label x:Name="Birthdate" Content="Fødselsdag:"
                               FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B"
                               VerticalAlignment="Center"
                                HorizontalAlignment="Right"/>
                        <TextBox x:Name="BirthDateField" Width="198" Margin="16,0,0,0"
                                 FontFamily="Franklin Gothic Book" FontSize="16"  HorizontalAlignment="Left"/>
                    </StackPanel>

                    <!-- Adresse -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,6">
                        <Label x:Name="Adress" Content="Adresse:"
                               FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B"
                               VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBox x:Name="AdressField" Width="198" Margin="16,0,0,0"
                                 FontFamily="Franklin Gothic Book" FontSize="16" HorizontalAlignment="Left"/>
                    </StackPanel>

                    <!-- Mail -->
                    <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="0,6">
                        <Label x:Name="Email" Content="Mail:"
                               FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B"
                               VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBox x:Name="EmailField" Width="198" Margin="16,0,0,0"
                                 FontFamily="Franklin Gothic Book" FontSize="16" HorizontalAlignment="Left"/>
                    </StackPanel>

                    <!-- Tlf.1 -->
                    <StackPanel Grid.Row="6" Orientation="Horizontal" Margin="0,6">
                        <Label x:Name="TelephoneNumber1" Content="Tlf.1:"
                               FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B"
                               VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBox x:Name="TelephoneNumber1Field" Width="127" Margin="16,0,0,0"
                                 FontFamily="Franklin Gothic Book" FontSize="16" HorizontalAlignment="Left"/>
                    </StackPanel>

                    <!-- Tlf.2 -->
                    <StackPanel Grid.Row="7" Orientation="Horizontal" Margin="0,6">
                        <Label x:Name="TelephoneNumber2" Content="Tlf.2:"
                               FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B"
                               VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBox x:Name="TelephoneNumber2Field" Width="127" Margin="16,0,0,0"
                                 FontFamily="Franklin Gothic Book" FontSize="16" HorizontalAlignment="Left"/>
                    </StackPanel>

                    <!-- Rolle -->
                    <StackPanel Grid.Row="8" Orientation="Horizontal" Margin="0,12">
                        <Label x:Name="Role" Content="Rolle:"
                               FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B"
                               VerticalAlignment="Center" HorizontalAlignment="Right" />
                        <ComboBox x:Name="RoleComboBox" Width="127" Margin="16,0,0,0"
                                  FontFamily="Franklin Gothic Book" FontSize="16" HorizontalAlignment="Left"/>
                    </StackPanel>
                </Grid>

                <!-- Right side: team, rank, weight, judo pass/licens, save -->
                <Grid Grid.Column="1" Margin="30,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Hold -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,6">
                        <Label x:Name="Team" Content="Hold:"
                               FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B"
                               VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <ComboBox x:Name="TeamComboBox" Width="127" Margin="16,0,0,0"
                                  FontFamily="Franklin Gothic Book" FontSize="16"
                                  Background="White" BorderBrush="{x:Null}"  HorizontalAlignment="Left"/>
                    </StackPanel>

                    <!-- KYU -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,6">
                        <Label x:Name="Rank" Content="KYU:"
                               FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B"
                               VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBox x:Name="RankField" Width="127" Margin="16,0,0,0"
                                 FontFamily="Franklin Gothic Book" FontSize="16"  HorizontalAlignment="Left"/>
                    </StackPanel>

                    <!-- Vægt -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,6">
                        <Label x:Name="Weight" Content="Vægt:"
                               FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B"
                               VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <TextBox x:Name="WeightField" Width="127" Margin="16,0,0,0"
                                 FontFamily="Franklin Gothic Book" FontSize="16" HorizontalAlignment="Left"/>
                    </StackPanel>

                    <!-- Judopas -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,12" VerticalAlignment="Center">
                        <Label x:Name="JudoPass" Content="Judopas:"
                               FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B"
                               VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <Label x:Name="Yes" Content="Ja"
                               FontFamily="Franklin Gothic Demi" FontSize="18" Foreground="#FFA30B0B"
                               Margin="16,0,0,0" VerticalAlignment="Center"/>
                        <CheckBox x:Name="YesToJudoPass" Width="30" Height="20" Margin="6,0,0,0" VerticalAlignment="Center"/>
                        <Label x:Name="No" Content="Nej"
                               FontFamily="Franklin Gothic Demi" FontSize="18" Foreground="#FFA30B0B"
                               Margin="16,0,0,0" VerticalAlignment="Center" />
                        <CheckBox x:Name="NoToJudoPass" Width="30" Height="20" Margin="6,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- JudoLicens -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,12" VerticalAlignment="Center">
                        <Label x:Name="JudoLicens" Content="JudoLicens:"
                               FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B"
                               VerticalAlignment="Center" HorizontalAlignment="Right"/>
                        <Label Content="Ja"
                               FontFamily="Franklin Gothic Demi" FontSize="18" Foreground="#FFA30B0B"
                               Margin="16,0,0,0" VerticalAlignment="Center"/>
                        <CheckBox x:Name="YesToJudoLicens" Width="30" Height="20" Margin="6,0,0,0" VerticalAlignment="Center"/>
                        <Label Content="Nej"
                               FontFamily="Franklin Gothic Demi" FontSize="18" Foreground="#FFA30B0B"
                               Margin="16,0,0,0" VerticalAlignment="Center"/>
                        <CheckBox x:Name="NoToJudoLicens" Width="30" Height="20" Margin="6,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Save -->
                    <Button x:Name="SaveMember" Content="Gem medlem"
                            Grid.Row="5" Margin="0,20,0,0"
                            Height="52" Width="149"
                            HorizontalAlignment="Left" VerticalAlignment="Top"
                            Background="#FF906048" BorderBrush="{x:Null}" Foreground="#FFF4F4F4"
                            FontFamily="Franklin Gothic Book" FontSize="18"
                            Click="SaveMember_Click"/>
                </Grid>
            </Grid>
        </Viewbox>
    </Grid>
</UserControl>