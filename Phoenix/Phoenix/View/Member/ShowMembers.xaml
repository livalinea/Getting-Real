<UserControl x:Class="Phoenix.ShowMembers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        MinHeight="480" MinWidth="720">


    

        <Grid>
            <!-- 3 rækker: header, indhold, logo -->
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <!-- Header -->
                <RowDefinition Height="*"/>
                <!-- Liste + knapper -->
                <RowDefinition Height="Auto"/>
                <!-- Logo nederst -->
            </Grid.RowDefinitions>

            <!-- 2 kolonner, ligesom din veninde -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- BAGGRUND -->
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                            <SkewTransform CenterX="0.5" CenterY="0.5"/>
                            <RotateTransform Angle="-90" CenterX="0.5" CenterY="0.5"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="#FFFDE2CE"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>

            <!-- HEADER -->
            <Grid Grid.Row="0" Grid.ColumnSpan="2">
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                        <LinearGradientBrush.RelativeTransform>
                            <TransformGroup>
                                <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </LinearGradientBrush.RelativeTransform>
                        <GradientStop Color="#FFFFDEBC"/>
                        <GradientStop Color="#FFFF8D66" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <TextBlock x:Name="TeamTitle"
                       Text="Medlemmer"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="36"
                       FontWeight="Bold"
                       Foreground="White"/>

                <!-- Tilbage-knap -->
                <Button Click="BackButton"
                    Background="Transparent"
                    BorderThickness="0"
                    Margin="40,0,0,0"
                    Height="40" Width="40"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                    <Image x:Name="BackArrow" Source="/Billeder/BackArrow.png" Stretch="Uniform"/>
                </Button>
            </Grid>
       
        <!-- VENSTRE SIDE: tekst + søg + liste -->
            <StackPanel Grid.Row="1" Grid.Column="0" Margin="10,20,105,50" Grid.ColumnSpan="2" Grid.RowSpan="1">

                <!-- SØGEFELT + LILLE GRID TIL IKON -->

                <!-- SØGEFELT + LILLE GRID TIL IKON -->
                <TextBlock Text="Medlemmer"
                       FontFamily="Franklin Gothic Demi"
                       FontWeight="Bold"
                       Foreground="#FFA30B0B"
                       FontSize="20"
                       Height="27"
                       Width="592" RenderTransformOrigin="0.29,0.111" />

                <!-- SØGEFELT + LILLE GRID TIL IKON -->
                <Grid Margin="10,10,0,10" Width="400" Height="24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400*"/>
                        <ColumnDefinition Width="40*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="Searchfield"
                         Grid.Column="0"
                         HorizontalContentAlignment="Left"
                         VerticalContentAlignment="Center"
                         Padding="5,0,30,0"
                         FontSize="14"
                         Text= "{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                        
                         TextChanged="SøgeFelt_TextChanged" Margin="-104,0,104,0"/>

                    <Button x:Name="SearchButton"
                        Content="🔍"
                        Height="24"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Cursor="Hand" RenderTransformOrigin="-6.182,0.562" Margin="234,0,0,0"/>
                </Grid>

                <!-- LISTE -->
                <ListView x:Name="HoldMedlemListe"
                     ItemsSource="{Binding Members}"
                  SelectedItem="{Binding SelectedMember, Mode=TwoWay}"
                      Height="281" Width="474" HorizontalAlignment="Left">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID"
                                        DisplayMemberBinding="{Binding MemberID}"
                                        Width="50"/>
                            <GridViewColumn Header="Navn"
                                        DisplayMemberBinding="{Binding FirstName}"
                                        Width="100"/>
                            <GridViewColumn Header="Alder"
                                        DisplayMemberBinding="{Binding Age}"
                                        Width="100"/>
                            <GridViewColumn Header="Hold"
                                        DisplayMemberBinding="{Binding Team}"
                                        Width="80"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>

            <!-- KNAPPERNE TIL HØJRE (samme række som listen) -->
            <Button x:Name="AddToMember"
                Content="Tilføj medlemmer"
                HorizontalAlignment="Left"
                Margin="508,103,0,0"
                VerticalAlignment="Top"
                Height="62"
                Width="202"
                Background="#FF906048"
                BorderBrush="{x:Null}"
                Foreground="#FFF4F4F4"
                FontFamily="Franklin Gothic Book"
                FontSize="18"
                Grid.ColumnSpan="2"
                Grid.Row="1" Click="AddToMember_Click"
               />

            <Button x:Name="RemoveOrEditFromMembers"
                Content="Fjern / rediger medlem"
                HorizontalAlignment="Left"
                Margin="508,185,0,0"
                VerticalAlignment="Top"
                Height="62"
                Width="202"
                Background="#FF906048"
                BorderBrush="{x:Null}"
                Foreground="#FFF4F4F4"
                FontFamily="Franklin Gothic Book"
                FontSize="18"
                Grid.ColumnSpan="2"
                Grid.Row="1" Click="RemoveOrEditFromMembers_Click"/>

            <!-- LOGO NEDERST -->
            <Image Grid.Row="2" Grid.ColumnSpan="2"
               x:Name="logo"
               Source="/logo judo.jpg"
               Height="80"
               HorizontalAlignment="Right"
               VerticalAlignment="Bottom"
               Margin="0,0,20,10"
               Opacity="0.8"/>

        </Grid>
   
</UserControl>
