        <!-- back button -->
        <Button Click="BackButton" Background="Transparent" BorderThickness="0" Margin="40,0,0,0" Height="40" Width="40" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Image x:Name="BackArrow" Source="/Billeder/BackArrow.png" Stretch="Uniform"/>
        </Button>

        <!-- lower rest w/ logo -->
        <Grid Grid.Row="2" >
            <Image x:Name="logo"  Source="/Billeder/logo judo.jpg" Height="80" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,10" Opacity="0.8"/>
