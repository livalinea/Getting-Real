<UserControl x:Class="Phoenix.TeamMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Phoenix"
             
        mc:Ignorable="d"
        MinHeight="480" MinWidth="720">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!--<RowDefinition Height="Auto"/>-->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <LinearGradientBrush.RelativeTransform>
                    <TransformGroup>
                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                        <RotateTransform Angle="-90" CenterX="0.5" CenterY="0.5"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </LinearGradientBrush.RelativeTransform>
                <GradientStop Color="#FFFDE2CE"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Header -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                            <SkewTransform CenterX="0.5" CenterY="0.5"/>
                            <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="#FFFFDEBC"/>
                    <GradientStop Color="#FFFF8D66" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <!-- Indhold i headeren -->
            <TextBlock x:Name="Hold" Text="Hold" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" FontWeight="Bold" Foreground="White"/>

            <Button Click="BackButton" Background="Transparent" BorderThickness="0" Margin="40,0,0,0" Height="40" Width="40" HorizontalAlignment="Left" VerticalAlignment="Center">
                <Image x:Name="BackArrow" Source="/Billeder/BackArrow.png" Stretch="Uniform"/>
            </Button>
        </Grid>

        <!--Knapperne-->
        <Grid Grid.Row="1" Grid.Column="0">
            <Button Content="Motorik" Width="200" Height="60" Background="#FFF8A521" Foreground="White" FontSize="20" FontFamily="Franklin Gothic Demi" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,50,25,0" FontWeight="Bold" Click="Button_Click"/>
            <Button Content="Junior" Width="200" Height="60" Background="#FFF8A521" Foreground="White" FontSize="20" FontFamily="Franklin Gothic Demi" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,140,25,0" Click="Button_Click"/>
            <Button Content="BJJ" Width="200" Height="60" Background="#FFF8A521" Foreground="White" FontSize="20" FontFamily="Franklin Gothic Demi" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,230,25,0" Click="Button_Click"/>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="1">
            <Button Content="Puslinge" Width="200" Height="60" Background="#FFF8A521" Foreground="White" FontSize="20" FontFamily="Franklin Gothic Demi" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,50,0,0" Grid.Column="1" Click="Button_Click"/>
            <Button Content="Senior" Width="200" Height="60" Background="#FFF8A521" Foreground="White" FontSize="20" FontFamily="Franklin Gothic Demi" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25,140,0,0" Grid.Column="1" Click="Button_Click"/>
        </Grid>
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <TextBlock TextWrapping="Wrap" Text="Vælg det ønskede hold" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0" Height="30" Width="210" Foreground="#FFA30B0B" FontSize="24" FontFamily="Arial Rounded MT Bold" FontWeight="Bold"/>
            <Image x:Name="logo"  Source="/Billeder/logo judo.png" Width="120" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20" Opacity="0.8"/>
        </Grid>
