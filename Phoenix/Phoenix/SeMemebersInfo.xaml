               FontSize="36" FontWeight="Bold" Foreground="White" Grid.Column="1" Margin="112,0,0,0" TextInput="Label_TextInput"/>-->


        <!--Foreground="#FFC12E2E"-->

        <!-- back button -->
        <Button Click="BackButton" Background="Transparent" BorderThickness="0" Margin="40,0,0,0" Height="40" Width="40" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Image x:Name="BackArrow" Source="/Billeder/BackArrow.png" Stretch="Uniform"/>
        </Button>

        <!-- lower rest w/ logo -->
        <Grid Grid.Row="2" >
            <Image x:Name="logo"  Source="/Billeder/logo judo.jpg" Height="80" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,10" Opacity="0.8"/>
            <Label x:Name="IDMember" Content="ID" HorizontalAlignment="Left" Margin="27,22,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" Background="Transparent" Foreground="#FFA30B0B" FontSize="18"/>
            <Label x:Name="Firstname" Content="Fornavn:" HorizontalAlignment="Left" Margin="27,57,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B"/>
            <Label x:Name="Lastname" Content="Efternavn:" HorizontalAlignment="Left" Margin="27,97,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B"/>
            <Label x:Name="Birthdate" Content="Fødselsdag:" HorizontalAlignment="Left" Margin="27,134,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B"/>
            <Label x:Name="Adress" Content="Adresse:" HorizontalAlignment="Left" Margin="27,174,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B" RenderTransformOrigin="0.562,-0.123"/>
                <Label x:Name="Email" Content="Mail:" HorizontalAlignment="Left" Margin="27,210,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B" RenderTransformOrigin="0.514,1.209"/>
                <Label x:Name="TelephoneNumber1" Content="Tlf.1:" HorizontalAlignment="Left" Margin="27,244,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B" RenderTransformOrigin="0.514,1.209"/>
                <Label x:Name="TelephoneNumber2" Content="Tlf.2:" HorizontalAlignment="Left" Margin="24,282,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B" RenderTransformOrigin="0.514,1.209"/>
                <Label x:Name="Role" Content="Rolle:" HorizontalAlignment="Left" Margin="24,320,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B" RenderTransformOrigin="0.514,1.209"/>
                <Label x:Name="Team" Content="Hold:" HorizontalAlignment="Left" Margin="27,354,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B" RenderTransformOrigin="0.514,1.209"/>
                <Label x:Name="Rank" Content="KYU:" HorizontalAlignment="Left" Margin="365,60,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B" RenderTransformOrigin="0.514,1.209"/>
                <Label x:Name="Weight" Content="Vægt:" HorizontalAlignment="Left" Margin="366,97,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B" RenderTransformOrigin="0.514,1.209"/>
                <Label x:Name="JudoPass" Content="Judopas:" HorizontalAlignment="Left" Margin="366,139,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B" RenderTransformOrigin="0.514,1.209"/>
                <Label x:Name="JudoLicens" Content="Judopas:" HorizontalAlignment="Left" Margin="366,179,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B" RenderTransformOrigin="0.514,1.209"/>


            <Label x:Name="IdLabel" Content="" HorizontalAlignment="Left" Margin="162,27,0,0" VerticalAlignment="Top" Width="127" FontFamily="Franklin Gothic Book" FontSize="16" Foreground="#FF191717"/>
            <Label x:Name="FirstnameLabel" Content="" HorizontalAlignment="Left" Margin="162,63,0,0" VerticalAlignment="Top" Width="198" FontFamily="Franklin Gothic Book" FontSize="16" Foreground="#FF191717" Height="27" Background="{x:Null}"/>
            <Label x:Name="LastnameLabel" Content="" HorizontalAlignment="Left" Margin="163,101,0,0" VerticalAlignment="Top" Width="198" FontFamily="Franklin Gothic Book" FontSize="16" Foreground="#FF191717" Height="20"/>
            <Label x:Name="BirthdateLabel" Content="" HorizontalAlignment="Left" Margin="162,140,0,0" VerticalAlignment="Top" Width="198" FontFamily="Franklin Gothic Book" FontSize="16" Foreground="#FF191717" Height="27"/>
            <Label x:Name="AdressLabel" Content="" HorizontalAlignment="Left" Margin="163,178,0,0" VerticalAlignment="Top" Width="198" FontFamily="Franklin Gothic Book" FontSize="16" Foreground="#FF191717" Height="27"/>
            <Label x:Name="EmailLabel" Content="" HorizontalAlignment="Left" Margin="163,216,0,0" VerticalAlignment="Top" Width="198" FontFamily="Franklin Gothic Book" FontSize="16" Foreground="#FF191717" Height="27"/>
            <Label x:Name="TelephoneNumber1Label" Content="" HorizontalAlignment="Left" Margin="163,250,0,0" VerticalAlignment="Top" Width="127" FontFamily="Franklin Gothic Book" FontSize="16" Foreground="#FF191717" Height="27"/>
            <Label x:Name="TelephoneNumber2Label" Content="" HorizontalAlignment="Left" Margin="163,288,0,0" VerticalAlignment="Top" Width="127" FontFamily="Franklin Gothic Book" FontSize="16" Foreground="#FF191717" Height="27"/>
            <Label x:Name="RoleLabel" Content="" HorizontalAlignment="Left" Margin="163,326,0,0" VerticalAlignment="Top" Width="127" FontFamily="Franklin Gothic Book" FontSize="16" Foreground="#FF191717" Height="27"/>
            <Label x:Name="TeamLabel" Content="" HorizontalAlignment="Left" Margin="163,359,0,0" VerticalAlignment="Top" Width="128" FontFamily="Franklin Gothic Book" FontSize="16" Foreground="#FF191717" Height="28"/>
            <Label x:Name="RankLabel" Content="" HorizontalAlignment="Left" Margin="477,59,0,0" VerticalAlignment="Top" Width="127" FontFamily="Franklin Gothic Book" FontSize="16" Foreground="#FF191717" Height="31"/>
            <Label x:Name="WeightLabel" Content="" HorizontalAlignment="Left" Margin="477,102,0,0" VerticalAlignment="Top" Width="127" FontFamily="Franklin Gothic Book" FontSize="16" Foreground="#FF191717" Height="23"/>
            <Label x:Name="JudoPassLabel" Content="" HorizontalAlignment="Left" Margin="500,138,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" Background="{x:Null}" Foreground="#FF191717" FontSize="18" RenderTransformOrigin="0.497,0.605" Height="38" Width="52"/>
            <Label x:Name="JudoLicensLabel" Content="" HorizontalAlignment="Left" Margin="500,181,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" Foreground="#FF191717" FontSize="18" Background="{x:Null}" Width="51" Height="39"/>

            <ListView  x:Name="MedlemListesInfo" Margin="366,222,121,33">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Dato" Width="70" />
                        <GridViewColumn Header="Beløb"  Width="65"/>
                        <GridViewColumn Header="Beskrivelse"  Width="100"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <Button x:Name="Edit"  Content="Rediger" HorizontalAlignment="Left" Margin="609,23,0,0" VerticalAlignment="Top" Height="50" Width="103" Background="#FF906048" BorderBrush="{x:Null}" Foreground="#FFF4F4F4" FontFamily="Franklin Gothic Book" FontSize="18" Click="Editorremove_Click"/>

        </Grid>

        <!--<Image x:Name="logo" Grid.Row="1" Source="/Billeder/logo judo.jpg" Width="120" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20" Opacity="0.8" Grid.Column="1"/>-->


    </Grid>
</UserControl>