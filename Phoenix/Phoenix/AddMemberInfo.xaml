            <TextBox x:Name="TeamField" HorizontalAlignment="Left" Margin="488,68,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="198" FontFamily="Franklin Gothic Book" FontSize="16"/>
            <TextBox x:Name="RankField" HorizontalAlignment="Left" Margin="488,111,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="198" FontFamily="Franklin Gothic Book" FontSize="16"/>
            <TextBox x:Name="WeightField" HorizontalAlignment="Left" Margin="488,147,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="198" FontFamily="Franklin Gothic Book" FontSize="16"/>
            <TextBox x:Name="JudoPassField" HorizontalAlignment="Left" Margin="501,185,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="47" FontFamily="Franklin Gothic Book" FontSize="16"/>
            <TextBox x:Name="JudoPassField_Copy" HorizontalAlignment="Left" Margin="501,223,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="47" FontFamily="Franklin Gothic Book" FontSize="16"/>



        </Grid>

        <!--<Image x:Name="logo" Grid.Row="1" Source="/Billeder/logo judo.jpg" Width="120" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20" Opacity="0.8" Grid.Column="1"/>-->

        <TextBlock HorizontalAlignment="Left" Margin="82,100,0,0" TextWrapping="Wrap" Text="Vælg det ønskede hold" VerticalAlignment="Top" Height="29" Width="330" Foreground="#FFA30B0B" FontSize="24" FontFamily="Arial Rounded MT Bold" FontWeight="Bold" Grid.Column="1"/>



    </Grid>
</UserControl>