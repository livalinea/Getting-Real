        <!--<Label x:Name="TitleTeam" Content="Placeholder" HorizontalAlignment="Left" VerticalAlignment="Top" 
               FontSize="36" FontWeight="Bold" Foreground="White" Grid.Column="1" Margin="112,0,0,0" TextInput="Label_TextInput"/>-->


        <!--Foreground="#FFC12E2E"-->

        <!-- back button -->
        <Button Click="BackButton" Background="Transparent" BorderThickness="0" Margin="40,0,0,0" Height="40" Width="40" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Image x:Name="BackArrow" Source="/Billeder/BackArrow.png" Stretch="Uniform"/>
        </Button>

        <!-- lower rest w/ logo -->
        <Grid Grid.Row="2" >
            <Image x:Name="logo"  Source="/Billeder/logo judo.jpg" Height="80" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,10" Opacity="0.8"/>
            <Label x:Name="IDMember" Content="ID" HorizontalAlignment="Left" Margin="27,22,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" Background="Transparent" Foreground="#FFA30B0B" FontSize="18"/>
            <Label x:Name="Firstname" Content="Fornavn:" HorizontalAlignment="Left" Margin="27,57,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B"/>
            <Label x:Name="Lastname" Content="Efternavn:" HorizontalAlignment="Left" Margin="27,95,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B"/>
            <Label x:Name="Birthdate" Content="Fødselsdag:" HorizontalAlignment="Left" Margin="27,134,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B"/>
            <Label x:Name="Adress" Content="Adresse:" HorizontalAlignment="Left" Margin="27,172,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B" RenderTransformOrigin="0.562,-0.123"/>
            <Label x:Name="Email" Content="Mail:" HorizontalAlignment="Left" Margin="27,210,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B" RenderTransformOrigin="0.514,1.209"/>
            <Label x:Name="TelephoneNumber1" Content="Tlf.1:" HorizontalAlignment="Left" Margin="27,244,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B" RenderTransformOrigin="0.514,1.209"/>
            <Label x:Name="TelephoneNumber2" Content="Tlf.2:" HorizontalAlignment="Left" Margin="24,282,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B" RenderTransformOrigin="0.514,1.209"/>
            <Label x:Name="Role" Content="Rolle:" HorizontalAlignment="Left" Margin="24,320,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B" RenderTransformOrigin="0.514,1.209"/>
            <Label x:Name="Team" Content="Hold:" HorizontalAlignment="Left" Margin="391,63,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B" RenderTransformOrigin="0.514,1.209"/>
            <Label x:Name="Rank" Content="KYU:" HorizontalAlignment="Left" Margin="395,101,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B" RenderTransformOrigin="0.514,1.209"/>
            <Label x:Name="Weight" Content="Vægt:" HorizontalAlignment="Left" Margin="395,137,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B" RenderTransformOrigin="0.514,1.209"/>
            <Label x:Name="JudoPass" Content="Judopas:" HorizontalAlignment="Left" Margin="395,0,0,0" VerticalAlignment="Center" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B" RenderTransformOrigin="0.514,1.209"/>
            <Label x:Name="JudoLicens" Content="Judopas:" HorizontalAlignment="Left" Margin="395,230,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FFA30B0B" RenderTransformOrigin="0.514,1.209"/>

            <TextBox x:Name="IdField" HorizontalAlignment="Left" Margin="162,27,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127" FontFamily="Franklin Gothic Book" FontSize="16" Background="{x:Null}" SelectionBrush="{x:Null}" SelectionTextBrush="{x:Null}" Foreground="#FF191717" BorderBrush="{x:Null}"/>
            <TextBox x:Name="FirstnamField" HorizontalAlignment="Left" Margin="162,63,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="198" FontFamily="Franklin Gothic Book" FontSize="16"/>
            <TextBox x:Name="LastnameField" HorizontalAlignment="Left" Margin="163,101,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="198" FontFamily="Franklin Gothic Book" FontSize="16"/>
            <TextBox x:Name="BirthDateField" HorizontalAlignment="Left" Margin="162,140,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="198" FontFamily="Franklin Gothic Book" FontSize="16"/>
            <TextBox x:Name="AdressField" HorizontalAlignment="Left" Margin="163,178,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="198" FontFamily="Franklin Gothic Book" FontSize="16"/>
            <TextBox x:Name="EmailField" HorizontalAlignment="Left" Margin="163,216,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="198" FontFamily="Franklin Gothic Book" FontSize="16"/>
            <TextBox x:Name="TelephoneNumber1Field" HorizontalAlignment="Left" Margin="163,250,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="127" FontFamily="Franklin Gothic Book" FontSize="16"/>
            <TextBox x:Name="TelephoneNumber2Field" HorizontalAlignment="Left" Margin="163,288,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="127" FontFamily="Franklin Gothic Book" FontSize="16"/>
            <TextBox x:Name="RoleField" HorizontalAlignment="Left" Margin="163,326,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="127" FontFamily="Franklin Gothic Book" FontSize="16"/>
            <TextBox x:Name="TeamField" HorizontalAlignment="Left" Margin="488,68,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="127" FontFamily="Franklin Gothic Book" FontSize="16"/>
            <TextBox x:Name="RankField" HorizontalAlignment="Left" Margin="488,111,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="127" FontFamily="Franklin Gothic Book" FontSize="16"/>
            <TextBox x:Name="WeightField" HorizontalAlignment="Left" Margin="488,147,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="127" FontFamily="Franklin Gothic Book" FontSize="16"/>

            <CheckBox x:Name="YesToJudoPass" Content="" HorizontalAlignment="Left" Margin="514,206,0,0" VerticalAlignment="Top" Height="20" Width="30"/>
            <CheckBox x:Name="NoToJudoPass" Content="" HorizontalAlignment="Left" Margin="569,208,0,0" VerticalAlignment="Top" Height="20" Width="30"/>
            <CheckBox x:Name="YesToJudoLicens" Content="" HorizontalAlignment="Left" Margin="514,241,0,0" VerticalAlignment="Top" Height="20" Width="30" RenderTransformOrigin="0.681,0.754"/>
            <CheckBox x:Name="NoToJudoLicens" Content="" HorizontalAlignment="Left" Margin="569,241,0,0" VerticalAlignment="Top" Height="20" Width="30"/>

            <Label x:Name="Yes" Content="Ja" HorizontalAlignment="Left" Margin="510,167,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" Background="Transparent" Foreground="#FFA30B0B" FontSize="18"/>
            <Label x:Name="No" Content="Nej" HorizontalAlignment="Left" Margin="560,167,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" Background="Transparent" Foreground="#FFA30B0B" FontSize="18"/>

            <Button x:Name="SaveMember"  Content="Gem medlem" HorizontalAlignment="Left" Margin="466,338,0,0" VerticalAlignment="Top" Height="52" Width="149" Background="#FF906048" BorderBrush="{x:Null}" Foreground="#FFF4F4F4" FontFamily="Franklin Gothic Book" FontSize="18" Click="Editorremove_Click"/>
          
        </Grid>

        <!--<Image x:Name="logo" Grid.Row="1" Source="/Billeder/logo judo.jpg" Width="120" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20" Opacity="0.8" Grid.Column="1"/>-->


    </Grid>
</UserControl>