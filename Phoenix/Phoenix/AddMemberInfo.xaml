        <!--Foreground="#FFC12E2E"-->

        <!-- back button -->
        <Button Click="BackButton" Background="Transparent" BorderThickness="0" Margin="40,0,0,0" Height="40" Width="40" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Image x:Name="BackArrow" Source="/Billeder/BackArrow.png" Stretch="Uniform"/>
        </Button>

        <!-- lower rest w/ logo -->
        <Grid Grid.Row="2" >
            <Image x:Name="logo"  Source="/Billeder/logo judo.jpg" Height="80" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,10" Opacity="0.8"/>
            <Label x:Name="IDMember" Content="ID" HorizontalAlignment="Left" Margin="27,22,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" Background="Transparent" Foreground="#FFA30B0B" FontSize="18"/>
            <Label x:Name="Firstname" Content="Fornavn:" HorizontalAlignment="Left" Margin="27,57,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FF6A3B24"/>
            <Label x:Name="Lastname" Content="Efternavn:" HorizontalAlignment="Left" Margin="27,95,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FF6A3B24"/>
            <Label x:Name="Birthdate" Content="Fødselsdag:" HorizontalAlignment="Left" Margin="27,134,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FF6A3B24"/>
            <Label x:Name="Adress" Content="Adresse:" HorizontalAlignment="Left" Margin="27,172,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FF6A3B24" RenderTransformOrigin="0.562,-0.123"/>
            <Label x:Name="Email" Content="Mail:" HorizontalAlignment="Left" Margin="27,210,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FF6A3B24" RenderTransformOrigin="0.514,1.209"/>
            <Label x:Name="TelephoneNumber1" Content="Tlf.1:" HorizontalAlignment="Left" Margin="27,244,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FF6A3B24" RenderTransformOrigin="0.514,1.209"/>
            <Label x:Name="TelephoneNumber2" Content="Tlf.2:" HorizontalAlignment="Left" Margin="24,282,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FF6A3B24" RenderTransformOrigin="0.514,1.209"/>
            <Label x:Name="Role" Content="Rolle:" HorizontalAlignment="Left" Margin="24,320,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FF6A3B24" RenderTransformOrigin="0.514,1.209"/>
            <Label x:Name="Team" Content="Hold:" HorizontalAlignment="Left" Margin="403,62,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FF6A3B24" RenderTransformOrigin="0.514,1.209"/>
            <Label x:Name="Rank" Content="KYU:" HorizontalAlignment="Left" Margin="403,101,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FF6A3B24" RenderTransformOrigin="0.514,1.209"/>
            <Label x:Name="Weight" Content="Vægt:" HorizontalAlignment="Left" Margin="403,137,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FF6A3B24" RenderTransformOrigin="0.514,1.209"/>
            <Label x:Name="JudoPass" Content="Judopas:" HorizontalAlignment="Left" Margin="403,175,0,0" VerticalAlignment="Top" FontFamily="Franklin Gothic Demi" FontSize="20" Foreground="#FF6A3B24" RenderTransformOrigin="0.514,1.209"/>

            <TextBox x:Name="FirstnamField" HorizontalAlignment="Left" Margin="140,63,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="198" FontFamily="Franklin Gothic Book" FontSize="16"/>
            <TextBox x:Name="LastnameField" HorizontalAlignment="Left" Margin="163,101,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="198" FontFamily="Franklin Gothic Book" FontSize="16"/>
            <TextBox x:Name="BirthDateField" HorizontalAlignment="Left" Margin="162,140,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="198" FontFamily="Franklin Gothic Book" FontSize="16"/>
            <TextBox x:Name="AdressField" HorizontalAlignment="Left" Margin="209,178,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="198" FontFamily="Franklin Gothic Book" FontSize="16"/>
            <TextBox x:Name="EmailField" HorizontalAlignment="Left" Margin="209,210,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="198" FontFamily="Franklin Gothic Book" FontSize="16"/>


            <Button x:Name="Editorremove"  Content="Tilføj/fjern medlemmer" HorizontalAlignment="Left" Margin="360,286,0,0" VerticalAlignment="Top" Height="52" Width="202" Background="#FF906048" BorderBrush="{x:Null}" Foreground="#FFF4F4F4" FontFamily="Franklin Gothic Book" FontSize="18"/>
            <!--Click="Editorremove_Click"-->
            <Button x:Name="SeeList" Content="Se medlemsliste" HorizontalAlignment="Left" Margin="360,347,0,0" VerticalAlignment="Top" Height="46" Width="202" Background="#FF906048" BorderBrush="{x:Null}" Foreground="#FFF4F4F4" FontFamily="Franklin Gothic Book" FontSize="18"/>

            <TextBox x:Name="TelephoneNumber1Field" HorizontalAlignment="Left" Margin="209,250,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="198" FontFamily="Franklin Gothic Book" FontSize="16"/>
            <TextBox x:Name="TelephoneNumber2Field" HorizontalAlignment="Left" Margin="209,282,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="198" FontFamily="Franklin Gothic Book" FontSize="16"/>
